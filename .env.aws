APP_NAME="eBrew Caf√©"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://YOUR_ALB_DNS_HERE

LOG_CHANNEL=stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# AWS RDS Database
DB_CONNECTION=mysql
DB_HOST=YOUR_RDS_ENDPOINT_HERE
DB_PORT=3306
DB_DATABASE=ebrew_laravel
DB_USERNAME=admin
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# Session and Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
CACHE_STORE=database
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=sqs

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=ebrew-laravel-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Mail Configuration (AWS SES)
MAIL_MAILER=ses
MAIL_HOST=email-smtp.us-east-1.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=YOUR_SES_USERNAME
MAIL_PASSWORD=YOUR_SES_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Redis (AWS ElastiCache)
REDIS_HOST=your-redis-cluster.cache.amazonaws.com
REDIS_PASSWORD=null
REDIS_PORT=6379

VITE_APP_NAME="${APP_NAME}"